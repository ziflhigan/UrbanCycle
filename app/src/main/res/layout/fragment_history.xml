<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/greenRectangle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="56dp"
        android:background="#67FF76"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="47dp"
        android:layout_height="35dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/tree_coin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/greenRectangle" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="157dp"
        android:layout_height="30dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="68dp"
        android:text="Your Saving History"
        android:textColor="@android:color/holo_purple"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="393dp"
        android:layout_height="601dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greenRectangle">

        <TableLayout
            android:id="@+id/myTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Table Header -->

            <!-- Table Rows (Populated Dynamically) -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="99dp"
                    android:padding="8dp"
                    android:text="StartPlace"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="93dp"
                    android:padding="8dp"
                    android:text="EndPlace "
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="67dp"
                    android:padding="8dp"
                    android:text="Date"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="Daily Amount"
                    android:textStyle="bold" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView2"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView2"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView2"
                    android:padding="8dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView3"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView3"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView3"
                    android:padding="8dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView4"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView4"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView4"
                    android:padding="8dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView5"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView5"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView5"
                    android:padding="8dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView6"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView6"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView6"
                    android:padding="8dp" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Add TextViews for each column, you can customize the layout further -->
                <TextView
                    android:id="@+id/usernameTextView7"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dateTextView7"
                    android:padding="8dp" />

                <TextView
                    android:id="@+id/dailyAmountTextView7"
                    android:padding="8dp" />


            </TableRow>
            <!-- More TableRow elements for additional items -->

        </TableLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCalculateTotalAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#00BCD4"
        android:onClick="calculateTotalAmount"
        android:text="Total Amount"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>