<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Authentication"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Authentication">


    <RelativeLayout
        android:id="@+id/Wave1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/wave2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        tools:layout_editor_absoluteX="-16dp">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/Wave2"
        android:layout_width="match_parent"
        android:layout_height="345dp"
        android:layout_marginBottom="388dp"
        android:background="@drawable/wave1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-1dp">

    </RelativeLayout>

    <ImageView
        android:id="@+id/UrbanCycleImage"
        android:layout_width="200dp"

        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="@+id/Wave2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Wave2"
        app:srcCompat="@drawable/icon" />

    <TextView
        android:id="@+id/AppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:text="UrbanCycle"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387" />

    <Button
        android:id="@+id/Register"
        android:layout_width="146dp"
        android:layout_height="64dp"
        android:layout_marginTop="564dp"
        android:layout_marginEnd="132dp"
        android:backgroundTint="#D0048A09"
        android:text="@string/register"
        android:textSize="20sp"
        app:iconSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Login"
        android:layout_width="146dp"
        android:layout_height="64dp"
        android:layout_marginTop="468dp"
        android:layout_marginEnd="132dp"
        android:backgroundTint="#4CAF50"
        android:text="@string/login"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>